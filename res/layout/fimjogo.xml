<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_weight="20.16" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="976dp"
            android:layout_weight="20.16"
            android:background="#FFFFBB33"
            android:contentDescription="@string/app_name"
            android:scaleType="center" />

        <Button
            android:id="@+id/btReiniciarJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:text="Reiniciar" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:text="FIM DE JOGO"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btSairJogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btReiniciarJogo"
            android:layout_alignBottom="@+id/btReiniciarJogo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:text="Sair" />

    </RelativeLayout>

</LinearLayout>